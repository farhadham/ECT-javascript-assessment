{
  "compilerOptions": {
    "target": "es2017",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "outDir": "./dist",
    "rootDir": ".",
    "allowJs": true, // Allow JavaScript files to be compiled
    "checkJs": false // Don't type-check JavaScript files
  },
  "include": ["**/*.ts", "**/*.js"],
  "exclude": [
    "node_modules",
    "**/*.test.js",
    "dist" // Exclude the dist folder to prevent recompilation
  ]
}
