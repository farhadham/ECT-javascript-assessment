{
  "compilerOptions": {
    "target": "es2017",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "outDir": "./dist",
    "rootDir": ".",
    "allowJs": true,
    "checkJs": false
  },
  "include": ["**/*.ts", "**/*.js"],
  "exclude": ["node_modules", "**/*.test.js", "dist"]
}
